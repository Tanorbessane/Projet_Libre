@model IEnumerable<App.Models.Projet>

@{
    ViewData["Title"] = "Index";
}


<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
        <div class="container-fluid">
            <!-- OVERVIEW -->
            <div class="panel panel-headline">
                <div class="panel-heading">
                    <h3 class="panel-title">Liste des projets</h3>
                    <p>
                        <a asp-action="Create">Nouveau projet</a>
                    </p>
                    <div id="my-btns" class="btn-group " data-toggle="buttons">
                    <label class="btn btn-default ">
                        <i class="fa fa-list"></i>
                        <input type="radio" autocomplete="off" checked value="list">
                    </label>
                    <label class="btn btn-default active">
                        <i class="fa fa-th"></i>
                        <input type="radio" autocomplete="off" value="grid">
                    </label>
                </div>
                </div>
                
                <div class="panel-body">
                    <div class="partial_grid" >
                        @Html.Partial("_GridProjects.cshtml", ViewData["Allproject"])
                    </div>
                   <div class="partial_list" style="display:none">
                        @Html.Partial("_TabProjects.cshtml", Model)
                    </div>
                </div>
            </div>
            <!-- END OVERVIEW -->
        </div>
    </div>
    <!-- END MAIN CONTENT -->
</div>


@section Scripts{
    <script>
        $(document).ready(function () {

            if (@ViewBag.test == 1) {
                $('.partial_grid').show();
                $('.partial_list').hide();
            } else {
                $('.partial_grid').hide();
                $('.partial_list').show();
            }

        });

        $('#my-btns .btn').on('click', function (event) {
            //console.log($(this).find('input').val());
            var val = $(this).find('input').val();
            if (val == "grid") {
                $('.partial_grid').show();
                $('.partial_list').hide();
            } else {
                $('.partial_grid').hide();
                $('.partial_list').show();
            }
        });

    </script>
}

