@model App.Models.Groups

@{
    ViewData["Title"] = "Create";
    var getlist = ViewBag.lstUsers as IEnumerable<App.Models.Users>;
}

<div class="main">
    <!-- MAIN CONTENT -->
    <div class="main-content">
        <div class="container-fluid">
            <!-- OVERVIEW -->
            <div class="panel panel-headline">
                <div class="panel-heading">
                    <h2>Creation</h2>

                    <h4>
                        Ajouter un Groups
                    </h4>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="CreateGroup">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="Nom" class="control-label"></label>
                                <input asp-for="Nom" class="form-control" />
                                <span asp-validation-for="Nom" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Users">Team</label>
                                <select asp-for="Users" class="js-example-basic-multiple" name="states[]" multiple="multiple" style="width: 1138px;">
                                    @foreach (var x in getlist)
                                    {
                                        <option value="@x.Id">@x.UserName </option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="CreateGroup" class="btn btn-default" />
                            </div>
                        </form>
                    </div>
                </div>

                <a asp-action="Index">Retour à la liste</a>
                <!-- END OVERVIEW -->
            </div>
        </div>
        <!-- END MAIN CONTENT -->
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $('.js-example-basic-multiple').select2();
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
}

